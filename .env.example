# Firebase Configuration (Client-side - safe to expose in browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (Server-side only - KEEP SECRET!)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Admin User UID (for identifying admin users)
# Get this from: Firebase Console > Authentication > Users > Click on your user
# Copy the UID and paste it here (also update firestore.rules and storage.rules with this UID)
NEXT_PUBLIC_ADMIN_UID=your_admin_uid_here

# GitHub Configuration for MCP (if needed)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# MCP Configuration (if needed)
MCP_MEMORY_STORAGE_PATH=/path/to/portfolio/.mcp-memory
SQLITE_DB_PATH=/path/to/portfolio/dev.db

# Application Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
ADMIN_EMAIL=your-email@example.com
